<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/black"
    tools:context="com.example.chen.cuntada_app.app.View.AllActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

    <Button
        android:id="@+id/myDetailsButton"
        android:layout_width="170dp"
        android:layout_height="250dp"
        android:background="@drawable/button_details"
        android:fontFamily="serif"
        android:text="My Details"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/recipesButton"
        android:layout_width="170dp"
        android:layout_height="250dp"
        android:layout_toRightOf="@+id/myDetailsButton"
        android:background="@drawable/button_recipes"
        android:fontFamily="serif"
        android:text="Recipes"
        android:textColor="@color/white"
        android:textSize="25dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="198dp"
        tools:layout_editor_absoluteY="64dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/myRecipesButton"
            android:layout_width="170dp"
            android:layout_height="250dp"
            android:background="@drawable/button_myrecipes"
            android:fontFamily="serif"
            android:text="@string/my_recipes"
            android:textColor="@color/white"
            android:textSize="25dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="280dp" />


        <Button
            android:id="@+id/logOutButton"
            android:layout_width="170dp"
            android:layout_height="250dp"
            android:background="@drawable/button_logout"
            android:fontFamily="serif"
            android:text="@string/log_out"
            android:textColor="@color/white"
            android:textSize="25dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="198dp"
            tools:layout_editor_absoluteY="280dp" />

    </LinearLayout>
    </LinearLayout>

</LinearLayout>
